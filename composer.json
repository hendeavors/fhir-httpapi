{
    "name": "endeavors/fhir-httpapi",
    "description": "Rest api client to handle requests to fhir resources.",
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "nyholm/psr7": "^1.0",
        "endeavors/fhir-clinical": "^0.2"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.0",
        "guzzlehttp/guzzle": "^6.5",
        "phpunit/phpunit": "^8.0"
    },
    "suggest": {
        "ext-curl": "Required for CURL handler support",
        "php-http/curl-client": "A Psr18 http client",
        "php-http/guzzle6-adapter": "A Psr18 adapter for guzzle6",
        "endeavors/fhir-laravel": "Makes life easier in the context of Laravel"
    },
    "autoload": {
        "psr-4": {
            "Endeavors\\Fhir\\Http\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Endeavors\\Fhir\\Http\\Api\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
